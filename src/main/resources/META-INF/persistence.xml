<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

    <persistence-unit name="comisaria"> <!-- ojo con el nombre-->
      
        <!-- Representación de las clases-->
        <class>
            com.nightm4re.comisariav2.modelo.Sospechoso
        </class>
        <class>
            com.nightm4re.comisariav2.modelo.Antecedentes
        </class>
        <class>
            com.nightm4re.comisariav2.modelo.Correo
        </class>
        <class>
            com.nightm4re.comisariav2.modelo.DatosExtra
        </class>
        <class>
            com.nightm4re.comisariav2.modelo.Direccion
        </class>
        <class>
            com.nightm4re.comisariav2.modelo.Foto
        </class>
        <class>
            com.nightm4re.comisariav2.modelo.Matricula
        </class>
        <class>
            com.nightm4re.comisariav2.modelo.NumeroTelefono
        </class>
    
    <properties>
        <property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
        <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:~/database" /> <!-- en memoria -->
        <!-- en disco ~ -->
        <property name="javax.persistence.jdbc.user" value="sa" />
        <property name="javax.persistence.jdbc.password" value="" />
        
        <!-- lenguaje sql -->
        <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />
        <property name="hibernate.hbm2ddl.auto" value="create-drop" /> 
        <!-- cuando se cierra se borra o create o validate o update: validate el más seguro-->
    </properties>
</persistence-unit>

</persistence>